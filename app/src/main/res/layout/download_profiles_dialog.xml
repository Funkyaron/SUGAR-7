<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dialogDownloadRoot"
    android:minWidth="350dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@mipmap/download_button"
        android:background="@color/sugar_orange"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adresse:"
            android:textSize="17dp"/>
        <EditText
            android:id="@+id/serverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ihre Serveradresse"
            android:backgroundTint="@color/black"
            android:textSize="17dp"
            android:maxLines="1"
            android:inputType="text"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="17dp"
            android:layout_marginRight="1dp"/>
        <EditText
            android:id="@+id/serverUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Ihr Username"
            android:backgroundTint="@color/black"
            android:textSize="17dp"
            android:maxLines="1"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paswort: "
            android:textSize="17dp"/>
        <EditText
            android:id="@+id/serverPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:hint="Ihr Passwort"
            android:textSize="17dp"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <Button
            android:id="@+id/downloadProfileButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Download"
            android:background="@color/white"
            android:textSize="17dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/cancelDownloadButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Abrrechen"
            android:background="@color/white"
            android:textSize="17dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>